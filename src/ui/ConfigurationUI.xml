<Window
    xmlns="xml_ui.controls"
    Title="Chat App | Configuration">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Text="Initial server address:"/>
            <TextBox Name="serverAddress"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Text="Port:"/>
            <TextBox Name="port"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label Text="Username:"/>
            <TextBox Name="username"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Button Content="Connect" Click="Connect_Click"/>
        </StackPanel>
    </Grid>
</Window>
